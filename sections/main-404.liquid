<section class="grid items-center py-12 md:py-20 lg:py-28">
  <div class="container px-4 mx-auto flex flex-col items-start gap-4 md:gap-5">
    <h1 class="max-w-xl scroll-m-20 text-4xl font-medium tracking-tight lg:text-5xl">
      {{ section.settings.heading }}
    </h1>
    <p class="max-w-prose text-lg">
      {{ section.settings.text }}
    </p>
    {% if section.settings.button_label != blank %}
      <a
        class="inline-flex items-center justify-center px-4 h-11 rounded-sm text-white bg-black"
        href="{{ routes.all_products_collection_url }}">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Main 404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "404 Page Not Found"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "The page you are looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Continue Shopping"
    }
  ]
}
{% endschema %}
